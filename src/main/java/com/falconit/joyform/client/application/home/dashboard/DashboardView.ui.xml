<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:m="urn:import:gwt.material.design.client.ui"
             xmlns:ma="urn:import:gwt.material.design.addins.client"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:combobox="urn:import:gwt.material.design.addins.client.combobox"
             xmlns:m.table="urn:import:gwt.material.design.client.ui.table">
    <m:MaterialRow>
        <!--
            <m:MaterialRow ui:field="channels" grid="l12 m12 s12">
                <m:MaterialTitle title="My Apps" textColor="BLACK" />
            </m:MaterialRow>
    -->
        <m:MaterialRow grid="l12 m12 s12" marginTop="20">
            
            <m:MaterialColumn grid="l4">
            <m:MaterialCard backgroundColor="GREY_LIGHTEN_3" shadow="0"> <!--  backgroundColor="BLUE_GREY_DARKEN_1" -->
             <m:MaterialCardContent> <!--  textColor="WHITE" -->
              <m:MaterialCardTitle text="Apps" iconType="APPS" iconPosition="RIGHT"/>
              <m:MaterialLabel ui:field="txtapps" text="0 active Apps" />
             </m:MaterialCardContent>
             <m:MaterialCardAction>
                 <!--
              <m:MaterialLink text="Create" iconType="CREATE" textColor="TEAL"/>
              -->
              <m:MaterialLink text="Manage" iconType="TUNE" textColor="TEAL"/>
             </m:MaterialCardAction>
            </m:MaterialCard>
           </m:MaterialColumn>
           
           <m:MaterialColumn grid="l4">
            <m:MaterialCard backgroundColor="GREY_LIGHTEN_3" shadow="0">
             <m:MaterialCardContent>
              <m:MaterialCardTitle text="Workflow" iconType="LIST" iconPosition="RIGHT"/>
              <m:MaterialLabel ui:field="txtworkflow" text="0 active workflows" />
             </m:MaterialCardContent>
             <m:MaterialCardAction>
                 <!--
              <m:MaterialLink text="Create" iconType="CREATE" textColor="TEAL"/>
              -->
              <m:MaterialLink text="Manage" iconType="TUNE" textColor="TEAL"/>
             </m:MaterialCardAction>
            </m:MaterialCard>
           </m:MaterialColumn>
           
           <m:MaterialColumn grid="l4">
            <m:MaterialCard backgroundColor="GREY_LIGHTEN_3" shadow="0">
             <m:MaterialCardContent>
              <m:MaterialCardTitle text="Form" iconType="ASSIGNMENT" iconPosition="RIGHT"/>
              <m:MaterialLabel ui:field="txtform" text="0 active forms" />
             </m:MaterialCardContent>
             <m:MaterialCardAction>
                 
              <m:MaterialLink href="#myapps" text="Create" iconType="CREATE" textColor="TEAL"/>
              
              <m:MaterialLink text="Manage" href="#privateapps" iconType="TUNE" textColor="TEAL"/>
             </m:MaterialCardAction>
            </m:MaterialCard>
           </m:MaterialColumn>
    
           <m:MaterialColumn grid="l4">
            <m:MaterialCard backgroundColor="GREY_LIGHTEN_3" shadow="0">
             <m:MaterialCardContent>
              <m:MaterialCardTitle text="Task invitation" iconType="FORWARD" iconPosition="RIGHT"/>
              <m:MaterialLabel text="By names or by groups" />
             </m:MaterialCardContent>
             <m:MaterialCardAction>
              <m:MaterialLink href="#taskassign" text="Create" iconType="ASSIGNMENT_IND" textColor="TEAL"/>
             </m:MaterialCardAction>
            </m:MaterialCard>
           </m:MaterialColumn>
                      
           <m:MaterialColumn grid="l4">
            <m:MaterialCard backgroundColor="GREY_LIGHTEN_3" shadow="0">
             <m:MaterialCardContent>
              <m:MaterialCardTitle text="Tasks in progress" iconType="POLL" iconPosition="RIGHT"/>
              <m:MaterialLabel text="12 tasks in progress" ui:field="txtprogress" />
             </m:MaterialCardContent>
             <m:MaterialCardAction>
              <m:MaterialLink href="#tasklist" text="Open" iconType="OPEN_IN_NEW" textColor="TEAL"/>
             </m:MaterialCardAction>
            </m:MaterialCard>
           </m:MaterialColumn>
                      
           <m:MaterialColumn grid="l4">
            <m:MaterialCard backgroundColor="GREY_LIGHTEN_3" shadow="0">
             <m:MaterialCardContent>
              <m:MaterialCardTitle text="Tasks completed" iconType="DONE_ALL" iconPosition="RIGHT"/>
              <m:MaterialLabel text="108 tasks completed" ui:field="txtcompleted" />
             </m:MaterialCardContent>
             <m:MaterialCardAction>
              <m:MaterialLink href="?filter=completed#tasklist" text="Open" iconType="OPEN_IN_NEW" textColor="TEAL"/>
             </m:MaterialCardAction>
            </m:MaterialCard>
           </m:MaterialColumn>
           
        </m:MaterialRow>
    <!--
        <m:MaterialRow ui:field="appsholder" grid="s12">
        </m:MaterialRow>
        -->
    </m:MaterialRow>
</ui:UiBinder>
