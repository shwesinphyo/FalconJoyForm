<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:m="urn:import:gwt.material.design.client.ui"
             xmlns:ma="urn:import:gwt.material.design.addins.client"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:combobox="urn:import:gwt.material.design.addins.client.combobox"
             xmlns:m.table="urn:import:gwt.material.design.client.ui.table">
    <m:MaterialRow>
            <m:MaterialRow ui:field="channels" grid="l12 m12 s12">
                <m:MaterialTitle title="My Apps" textColor="BLACK" />
            </m:MaterialRow>
    
        <m:MaterialRow grid="l12 m12 s12">
            
            <m:MaterialColumn grid="l4">
            <m:MaterialCard backgroundColor="BLUE_GREY_DARKEN_1">
             <m:MaterialCardContent textColor="WHITE">
              <m:MaterialCardTitle text="Apps" iconType="APPS" iconPosition="RIGHT"/>
              <m:MaterialLabel text="3 active Apps" />
             </m:MaterialCardContent>
             <m:MaterialCardAction>
              <m:MaterialLink text="Create" iconType="CREATE"/>
              <m:MaterialLink text="Manage" iconType="TUNE"/>
             </m:MaterialCardAction>
            </m:MaterialCard>
           </m:MaterialColumn>
           
           <m:MaterialColumn grid="l4">
            <m:MaterialCard backgroundColor="BLUE_GREY_DARKEN_1">
             <m:MaterialCardContent textColor="WHITE">
              <m:MaterialCardTitle text="Workflow" iconType="LIST" iconPosition="RIGHT"/>
              <m:MaterialLabel text="12 active workflows" />
             </m:MaterialCardContent>
             <m:MaterialCardAction>
              <m:MaterialLink text="Create" iconType="CREATE"/>
              <m:MaterialLink text="Manage" iconType="TUNE"/>
             </m:MaterialCardAction>
            </m:MaterialCard>
           </m:MaterialColumn>
           
           <m:MaterialColumn grid="l4">
            <m:MaterialCard backgroundColor="BLUE_GREY_DARKEN_1">
             <m:MaterialCardContent textColor="WHITE">
              <m:MaterialCardTitle text="Form" iconType="ASSIGNMENT" iconPosition="RIGHT"/>
              <m:MaterialLabel text="3 active forms" />
             </m:MaterialCardContent>
             <m:MaterialCardAction>
              <m:MaterialLink text="Create" iconType="CREATE"/>
              <m:MaterialLink text="Manage" iconType="TUNE"/>
             </m:MaterialCardAction>
            </m:MaterialCard>
           </m:MaterialColumn>
    
                      
                      
                                 
           <m:MaterialColumn grid="l4">
            <m:MaterialCard backgroundColor="BLUE_GREY_DARKEN_1">
             <m:MaterialCardContent textColor="WHITE">
              <m:MaterialCardTitle text="Task assignemnt" iconType="FORWARD" iconPosition="RIGHT"/>
              <m:MaterialLabel text="Assign tasks to your colleague, offer speciality to your customers" />
             </m:MaterialCardContent>
             <m:MaterialCardAction>
              <m:MaterialLink text="Create" iconType="CREATE"/>
             </m:MaterialCardAction>
            </m:MaterialCard>
           </m:MaterialColumn>
                      
           <m:MaterialColumn grid="l4">
            <m:MaterialCard backgroundColor="BLUE_GREY_DARKEN_1">
             <m:MaterialCardContent textColor="WHITE">
              <m:MaterialCardTitle text="Tasks in progress" iconType="POLL" iconPosition="RIGHT"/>
              <m:MaterialLabel text="12 tasks in progress" />
             </m:MaterialCardContent>
             <m:MaterialCardAction>
              <m:MaterialLink text="Open" iconType="OPEN_IN_NEW"/>
             </m:MaterialCardAction>
            </m:MaterialCard>
           </m:MaterialColumn>
                      
           <m:MaterialColumn grid="l4">
            <m:MaterialCard backgroundColor="BLUE_GREY_DARKEN_1">
             <m:MaterialCardContent textColor="WHITE">
              <m:MaterialCardTitle text="Tasks completed" iconType="DONE_ALL" iconPosition="RIGHT"/>
              <m:MaterialLabel text="108 tasks completed" />
             </m:MaterialCardContent>
             <m:MaterialCardAction>
              <m:MaterialLink text="Open" iconType="OPEN_IN_NEW"/>
             </m:MaterialCardAction>
            </m:MaterialCard>
           </m:MaterialColumn>
           
        </m:MaterialRow>
    
        <m:MaterialRow ui:field="appsholder" grid="s12">

        </m:MaterialRow>
    </m:MaterialRow>
</ui:UiBinder>
