<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:m="urn:import:gwt.material.design.client.ui"
             xmlns:ma="urn:import:gwt.material.design.addins.client"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:combobox="urn:import:gwt.material.design.addins.client.combobox"
             xmlns:m.table="urn:import:gwt.material.design.client.ui.table">
    
    <m:MaterialRow >
    <m:MaterialRow grid="l8 m10 s12" offset="l2 m1" addStyleNames="code">
            <m:MaterialRow>
                <m:MaterialTitle textAlign="CENTER" marginTop="15" title="Task assigment" textColor="BLACK" />
            </m:MaterialRow>
    
    <m:MaterialTextBox ui:field="txtactors" label="Recipients" allowBlank="true" autoValidate="false"/>
    <m:MaterialTextBox ui:field="txtgroups" paddingTop="20" label="Groups" allowBlank="true" autoValidate="false"/>
    
    <m:MaterialRow>
        
    <m:MaterialButton ui:field="btnassign" text="Assign" iconType="FORWARD" grid="l4" marginTop="12" textColor="WHITE" waves="DEFAULT"/>
    <m:MaterialButton ui:field="btncancel" text="Cancel" grid="l4" marginTop="12" type="FLAT" waves="DEFAULT"/>
    </m:MaterialRow>
    
        <m:MaterialRow ui:field="appsholder">

        </m:MaterialRow>
    </m:MaterialRow>
    
    </m:MaterialRow>
</ui:UiBinder>
